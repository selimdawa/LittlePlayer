<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Start application theme. -->
    <style name="OneTheme" parent="Base.AppCompat.OneTheme" />

    <style name="Base.AppCompat.OneTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--  <item name="android:windowFullscreen">true</item>  -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="color">@color/white</item>
        <item name="background">@drawable/gradient</item>
        <item name="tickColor">@color/night_corner_2</item>
        <item name="trackColor">@color/night_corner</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorError">@color/dark</item>
        <item name="colorOnError">@color/night_corner_2</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
    </style>

    <!-- Night application theme. -->
    <style name="OneNightTheme" parent="Base.AppCompat.OneNightTheme" />

    <style name="Base.AppCompat.OneNightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--  <item name="android:windowFullscreen">true</item>  -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="color">@color/white</item>
        <item name="background">@color/basic_night</item>
        <item name="tickColor">@color/basic_night</item>
        <item name="trackColor">@color/basic_night</item>
        <item name="colorOnBackground">@color/dark</item>
        <item name="colorError">@color/white</item>
        <item name="colorOnError">@color/dark</item>
    </style>
    <!-- End application theme. -->

    <!-- Start No Action Bar -->
    <style name="OneTheme.NoActionBarAndStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <!-- End No Action Bar -->

</resources>